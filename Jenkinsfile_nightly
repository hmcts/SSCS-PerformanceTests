#!groovy

properties([
        pipelineTriggers([cron('00 21 * * *')]),
        parameters([
                string(name: 'ENVIRONMENT', defaultValue: 'aat', description: 'Environment to test'),
                string(name: 'URL_TO_TEST_TYA', defaultValue: 'https://track-appeal.demo.platform.hmcts.net', description: 'The URL you want to run these tests against'),
                string(name: 'URL_TO_TEST_SYA', defaultValue: 'https://benefit-appeal.nonprod.platform.hmcts.net', description: 'this is for testing sya on aat'),
                string(name: 'paymentURL', defaultValue: 'https://idam.preprod.ccidam.reform.hmcts.net', description: 'this is the payment url for sscs')
        ])
])



@Library("Infrastructure") _

def product = "sscs"
def component = "sya"

withNightlyPipeline("java", product, component) {
    env.URL_TO_TEST_TYA = params.URL_TO_TEST_TYA
    env.URL_TO_TEST_SYA = params.URL_TO_TEST_SYA
    env.paymentURL = params.paymentURL

    enablePerformanceTest()

    after('performanceTest') {
        steps.archiveArtifacts allowEmptyArchive: true, artifacts: 'functional-output/**/*'
    }

}